<odoo>

    <record id="view_hr_payroll_extratime_form" model="ir.ui.view">
        <field name="name">hr.payroll.extratime.form</field>
        <field name="model">hr.payroll.extratime</field>
        <field name="arch" type="xml">
            <form string="Payroll Salary Increases">
                <header>
                    <button
                        string="Approve"
                        name="approved_extratime"
                        class="oe_highlight"
                        states="draft"
                        type='object'
                    />
                    <button
                        string="Cancel"
                        name="cancel_extratime"
                        states="draft,approved"
                        type='object'
                    />
                    <button
                        string="Done"
                        name="done_extratime"
                        class="oe_highlight"
                        states="approved"
                        type='object'
                    />
                    <button
                        string="Back to Draft"
                        name="draft_extratime"
                        class="oe_highlight"
                        states="done, cancel"
                        type='object'
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1><field
                                name="name"
                                placeholder="Folio"
                                readonly="1"
                                nolabel="1"
                            /></h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="date"
                                readonly="1 "
                                attrs="{'invisible':[('date','=', False)]}"
                            />
                            <field
                                name="employee_id"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                            <field name="contract_id" invisible="1" />
                            <field name="period_id" />
                            <field
                                name="period_line_id"
                                domain="[('period_id', '=', period_id), ('state', '=', 'open')]"
                            />
                            <label for="date_from" string="Period" />
                            <div class="o_row">
                                <field name="date_from" class="oe_inline" /> - <field
                                    name="date_to"
                                    class="oe_inline"
                                />
                            </div>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                invisible="1"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Line">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="date" />
                                    <field name="employee_id" />
                                    <field name="contract_id" invisible="1" />
                                    <field name="period_line_id" invisible="1" />
                                    <field name="type_hour" invisible="0" />
                                    <field name="hours" />
                                    <field name="state" invisible="1" />
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field
                                name="notes"
                                nolabel="1"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>


    <record id="hr_payroll_extratime_tree" model="ir.ui.view">
        <field name="name">hr.payroll.extratime.tree</field>
        <field name="model">hr.payroll.extratime</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" />
                <field name="employee_id" />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'approved'"
                    decoration-success="state == 'done'"
                />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="action_view_hr_extratime_movement" model="ir.actions.act_window">
        <field name="name">Extratime movement</field>
        <field name="res_model">hr.payroll.extratime</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
