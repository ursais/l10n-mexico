<odoo>

    <record id="view_hr_payroll_loan_filter" model="ir.ui.view">
        <field name="name">hr.payroll.loan.search</field>
        <field name="model">hr.payroll.loan</field>
        <field name="arch" type="xml">
            <search string="Employees">
                <field name="name" string="Employee" />
                <field name="loan_type_mx" />
                <searchpanel>
                    <field
                        name="company_id"
                        groups="base.group_multi_company"
                        icon="fa-building"
                        enable_counters="1"
                    />
                    <field name="loan_type_mx" icon="fa-bars" enable_counters="1" />
                </searchpanel>
            </search>
            </field>
    </record>

    <record id="view_hr_payroll_loan_form" model="ir.ui.view">
        <field name="name">hr.payroll.loan.form</field>
        <field name="model">hr.payroll.loan</field>
        <field name="arch" type="xml">
            <form string="Payroll Movement">
                <header>
                    <button
                        string="Approve"
                        name="approved_loan"
                        class="oe_highlight"
                        states="draft"
                        type='object'
                    />
                    <button
                        string="Cancel"
                        name="cancel_loan"
                        states="draft,approved"
                        type='object'
                    />
                    <button
                        string="Done"
                        name="done_loan"
                        class="oe_highlight"
                        states="approved"
                        type='object'
                    />
                    <button
                        string="Set to Draft"
                        name="draft_loan"
                        class="oe_highlight"
                        states="cancel,done"
                        type='object'
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1><field
                                name="name"
                                placeholder="Folio"
                                readonly="1"
                                nolabel="1"
                            /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="total_amount" invisible="1" />
                            <field name="total_paid" readonly="1" invisible="1" />
                            <field name="amount" />
                            <label for="date_start" string="Period" />
                            <span>
                                <field name="date_start" class="oe_inline" /> - <field
                                    name="date_end"
                                    class="oe_inline"
                                />
                            </span>
                            <field name="periods" invisible="1" />
                        </group>
                        <group>
                            <field name="employee_id" />
                            <field
                                name="loan_type_mx"
                                options="{'no_create': True}"
                                domain="[('input_type_mx', '=', 'loan')]"
                            />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page id="payments_tab" name="payments_tab" string="Payments">
                            <field
                                name="payment_ids"
                                nolabel="1"
                                create="0"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            >
                                <tree>
                                    <field name="date" />
                                    <field name="name" />
                                    <field name="payslip_id" />
                                    <field
                                        name="state"
                                        widget="badge"
                                        decoration-info="state == 'draft'"
                                        decoration-success="state == 'paid'"
                                    />
                                    <field name="amount" sum="Total Amount" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>


    <record id="hr_loan_tree" model="ir.ui.view">
        <field name="name">hr.payroll.loan.tree</field>
        <field name="model">hr.payroll.loan</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="loan_type_mx" />
                <field name="total_amount" />
                <field name="total_paid" invisible="1" />
                <field name="amount" />
                <field
                    name="state"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'approved'"
                    decoration-warning="state == 'done'"
                    widget="badge"
                />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="action_view_hr_loans_form" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">hr.payroll.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
