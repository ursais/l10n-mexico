        <field name="hide_rule">False</field>
        <field name="amount_select">code</field>
        <field
            name="amount_python_compute"
        ><![CDATA[
sbc = 100.00
result = contract.env['hr.payroll.es.line'].search([('line_id','=', 2),('inf_sup','>=', sbc ),('lim_sup','<=', sbc )],limit=1).fix_fee
            ]]>
        </field>
